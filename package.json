{
  "name": "pcucumber",
  "version": "1.0.0",
  "description": "Test Automation Framework - WDIO + Cucumber + POM",
  "main": "index.js",
  "scripts": {
    "wdio": "wdio run wdio.conf.js",
    "test": "npm run wdio",
    "test:login": "npm run wdio -- --spec src/features/login.feature",
    "test:purchase": "npm run wdio -- --spec src/features/purchase.feature",
    "test:headless": "npm run wdio -- --headless",
    "test:tags": "npm run wdio -- --cucumberOpts.tagExpression",
    "test:parallel": "npm run wdio -- --maxInstances=5",
    "test:debug": "npm run wdio -- --inspect",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "report:serve": "allure serve allure-results",
    "clean:reports": "rimraf allure-results allure-report screenshots/ errorShots/",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "pretest": "npm run clean:reports",
    "posttest": "npm run report:allure"
  },
  "keywords": ["automation", "wdio", "cucumber", "bdd", "pom", "testing"],
  "author": "Manuel Tissone",
  "license": "ISC",
  "devDependencies": {
    "@wdio/cli": "^9.20.0",
    "@wdio/cucumber-framework": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/visual-service": "^9.20.0",
    "allure-commandline": "^2.29.0",
    "chromedriver": "^128.0.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5"
  }
}